<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.your.ednevnik.MainActivity">


    <ImageButton
        android:background="@drawable/user_navi"
        android:id="@+id/btn_prof"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="176dp"
       />

    <ImageButton
        android:background="@drawable/student"
        android:id="@+id/btn_std"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_prof"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="Učenik" />

    <TextView
        android:textColor="@color/White"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_prof"
        android:text="Profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_std"
        android:text="Učenik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
