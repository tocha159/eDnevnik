<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.your.ednevnik.Profesor.DodajStudente">

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:layout_widthPercent="90%"
            app:layout_marginTopPercent="1%"
            app:layout_marginLeftPercent="5%"
            app:layout_heightPercent="10%"
            app:cardElevation="2dp">

            <EditText
                android:id="@+id/ucenik_input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:textSize="20dp"
                android:hint="Unesite učenika"
                android:inputType="textNoSuggestions"
               />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:layout_widthPercent="90%"
            app:layout_marginTopPercent="12%"
            app:layout_marginLeftPercent="5%"
            app:layout_heightPercent="10%"
            app:cardElevation="2dp">

            <Spinner
                android:id="@+id/predmet_odb"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:hint="@string/subject_prompt"
                android:textSize="40dp"
                android:dropDownWidth="430dp"
                android:ems="5" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:layout_widthPercent="90%"
            app:layout_marginTopPercent="23%"
            app:layout_marginLeftPercent="5%"
            app:layout_heightPercent="76%"
            app:cardElevation="2dp">

            <ListView
                android:choiceMode="singleChoice"
                android:id="@+id/studenti_get"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
               >

            </ListView>

        </android.support.v7.widget.CardView>



    </android.support.percent.PercentRelativeLayout>

</FrameLayout>
