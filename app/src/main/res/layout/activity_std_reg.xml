<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.your.ednevnik.std_reg">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/sr_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/sr_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sr_id"
            android:layout_alignStart="@+id/sr_id"
            android:layout_below="@+id/sr_id"
            android:layout_marginTop="38dp"
            android:ems="10"
            android:hint="Ime i prezime"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/sr_usr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sr_ip"
            android:layout_alignStart="@+id/sr_ip"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/sr_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sr_usr"
            android:layout_alignStart="@+id/sr_usr"
            android:layout_below="@+id/sr_usr"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/sr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sr_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:text="Register" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
