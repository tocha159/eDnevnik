<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/aluminum</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>


        <item name="colorButtonNormal">@color/primary_darkerr</item>
    </style>


    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>


    <style name="ThemeApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/aluminum</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/aluminum</item>

        <item name="android:windowBackground">@color/WhiteSmoke</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/aluminum</item>
        <item name="colorControlHighlight">@color/aluminum</item>
        <item name="android:textColorHint">@color/iron</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ThemeApp.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/aluminum</item>

        <item name="android:windowBackground">@color/WhiteSmoke</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/aluminum</item>
        <item name="colorControlHighlight">@color/aluminum</item>
        <item name="android:textColorHint">@color/iron</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/aluminum</item>
        <item name="android:textColor">@color/aluminum</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">@color/aluminum</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/aluminum</item>
    </style>

    <style name="ThemeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ThemeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
